<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Blurb</th>
    <th>Pic file name</th>
    <th>Pic file size</th>
    <th>Pic content type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.description %></td>
    <td><%= post.blurb %></td>
    <td><%= post.pic_file_name %></td>
    <td><%= post.pic_file_size %></td>
    <td><%= post.pic_content_type %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
