<div id="contentBox">
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h1>New post</h1>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :blurb %><br />
    <%= f.text_field :blurb %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.cktext_area :description %>
  </div>
  <div class="field">
		<%= image_tag @post.pic.url(:medium) %> <br />
		<label class="instructions"><input type="checkbox" name="delete_image" value="1" /> Click checkbox to remove image</label>
   <br />
	</div>
  <%= f.label :pic, "Picture" %>  
  <%= f.file_field :pic %> <br /><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
